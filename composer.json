{
    "name": "typing/types",
    "description": "PHP primitive wrappers lib.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Victor Passapera",
            "email": "vpassapera@gmail.com"
        }
    ],
    "keywords": [
        "core",
        "library",
        "primitives",
        "int",
        "double",
        "float",
        "string",
        "datetime",
        "enum",
        "bool",
        "collection",
        "scalar"
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.0",
        "ext-mbstring": "*",
        "cocur/slugify": "*@stable",
        "composer/semver": "*@stable",
        "doctrine/collections": "*@stable",
        "doctrine/inflector": "*@stable",
        "myclabs/php-enum": "*@stable",
        "nesbot/carbon": "*@stable",
        "symfony/polyfill-ctype": "*@stable",
        "symfony/polyfill-mbstring": "*@stable"
    },
    "require-dev": {
        "ext-bcmath": "*",
        "ext-gmp": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "escapestudios/symfony2-coding-standard": "^3.12",
        "mockery/mockery": "^1.4",
        "pdepend/pdepend": "dev-master as 2.9.2",
        "phpmd/phpmd": "^2.10",
        "phpro/grumphp": "^1.3",
        "phpunit/phpunit": "^9.5",
        "povils/phpmnd": "dev-master as 2.5",
        "tm/tooly-composer-script": "^1.4"
    },
    "suggest": {
        "ext-bcmath": "*",
        "ext-gmp": "*",
        "moneyphp/money": "^1.2"
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true,
        "process-timeout": 10000,
        "optimize-autoloader": true,
        "github-protocols": ["https"],
        "preferred-install": {
            "*": "dist"
        },
        "platform": {
            "php": "8.0"
        }
    },
    "autoload": {
        "psr-4": {
            "Typing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Typing\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": "Tooly\\ScriptHandler::installPharTools",
        "post-update-cmd": "Tooly\\ScriptHandler::installPharTools"
    },
    "extra": {
        "tools": {
            "chag": {
                "url": "https://raw.githubusercontent.com/vpassapera/chag/master/chag",
                "only-dev": true,
                "force-replace": true
            },
            "roboli": {
                "url": "https://robo.li/robo.phar",
                "only-dev": false,
                "force-replace": true
            }
        }
    }
}
